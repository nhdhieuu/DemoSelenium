        xmlns:local="clr-namespace:SeleniumWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="username:"/>
        <TextBox  x:Name="UsernameBox" Grid.Column="1" Margin="5"/>
        <Label Grid.Row="1" Grid.Column="0" Content="password:"/>
        <TextBox Name="PasswordBox" Grid.Row="1"   Grid.Column="1" Margin="5"/>
        <Button x:Name="GoButton" Grid.Row="2" Grid.ColumnSpan="2" Margin="10,5,217,15" Click="ButtonBase_OnClick" >
           Thêm
        </Button>
        <Button Content="login" Height="201" Width="180" Grid.Column="1" Margin="265,32,10,31" Grid.Row="2" Click="ButtonBase1_OnClick"/>
