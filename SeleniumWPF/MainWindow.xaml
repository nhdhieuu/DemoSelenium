<Window x:Class="SeleniumWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeleniumWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="username:"/>
        <TextBox x:Name="UsernameBox" Grid.Column="1" Margin="5"/>
        <Label Grid.Row="1" Grid.Column="0" Content="password:"/>
        <TextBox Grid.Row="1"  x:Name="PasswordBox" Grid.Column="1" Margin="5"/>
        <Button x:Name="GoButton" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,10,5,10" Click="ButtonBase_OnClick" >Go</Button>
    </Grid>
</Window>
